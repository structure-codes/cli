{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "es6",
		"strict": true,
		"sourceMap": true,
		"noImplicitAny": true,
    "strictNullChecks": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"declarationDir": "dist",
		"outDir": "dist",
		"rootDir": "./src",
		"lib": [ "es6" ],
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src",
	]
}